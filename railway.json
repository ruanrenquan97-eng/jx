{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "NIXPACKS_V1",
    "installCommand": "cd server && npm install",
    "startCommand": "cd server && node server.js"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
