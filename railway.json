{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "NIXPACKS_V1",
    "buildCommand": "cd server && npm install",
    "startCommand": "cd server && node server.js",
    "env": {
      "NODE_VERSION": "18"
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
